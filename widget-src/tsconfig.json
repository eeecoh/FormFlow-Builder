{
  "compilerOptions": {
    "jsx": "react",
    "jsxFactory": "figma.widget.h",
    "jsxFragmentFactory": "figma.widget.Fragment",
    "target": "es2016",
    "lib": [
      "es2016"
    ],
    "strict": true,
    "module": "commonjs",
    "outDir": "./dist",
    "typeRoots": [
      "../node_modules/@types",
      "../node_modules/@figma"
    ]
  },
  "include": [
    "widget-src/**/*.ts",
    "widget-src/**/*.tsx"
  ]
}